<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1F000000"/> <!-- Adjust shadow color and opacity -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Circular Image Layer -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>
